{
  "manifest_version": 3,
  "name": "Dicionário Rápido",
  "version": "1.0.0",
  "description": "Selecione uma palavra em qualquer página para ver sua definição.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Dicionário Rápido",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.dictionaryapi.dev/api/v2/entries/en/*"
  ]
}